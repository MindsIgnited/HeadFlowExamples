<?xml version="1.0" ?>
<container xmlns="http://www.symfony-project.org/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:action="http://www.mitchellsoftware.net/schema/dic/action"
    xmlns:annotation="http://www.mitchellsoftware.net/schema/dic/annotation"
    xmlns:twig="http://www.mitchellsoftware.net/schema/dic/twig"
    xmlns:onecms="http://www.mitchellsoftware.net/schema/dic/onecms"
    xsi:schemaLocation="http://www.symfony-project.org/schema/dic/services http://www.symfony-project.org/schema/dic/services/services-1.0.xsd
    			http://www.mitchellsoftware.net/schema/dic/annotation http://www.mitchellsoftware.net/schema/dic/annotation/annotation-1.0.xsd
                        http://www.mitchellsoftware.net/schema/dic/action http://www.mitchellsoftware.net/schema/dic/action/action-1.0.xsd
			http://www.mitchellsoftware.net/schema/dic/twig http://www.mitchellsoftware.net/schema/dic/twig/twig-1.0.xsd
                        http://www.mitchellsoftware.net/schema/dic/onecms http://www.mitchellsoftware.net/schema/dic/onecms/onecms-1.0.xsd">

    <action:scan path="%root.dir%/headflow/actions"/>

    <twig:config templateSuffix="twig">
        <twig:templateDir>%root.dir%/headflow/views</twig:templateDir>
    </twig:config>

    <onecms:config />

</container>